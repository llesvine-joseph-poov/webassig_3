<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History - Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '/userHistory'}) %>
    <div class="user-history-container">
        <h1>User History</h1>
        <p>Account: <%= session.user.userName %> (<%= session.user.email %>)</p>
        <table>
            <thead>
                <tr>
                    <th>Login Date/Time</th>
                    <th>Client Information</th>
                </tr>
            </thead>
            <tbody>
                <% session.user.loginHistory.forEach(function(entry) { %>
                    <tr>
                        <td><%= entry.dateTime %></td>
                        <td><%= entry.userAgent %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
